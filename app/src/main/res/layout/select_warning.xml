<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout android:id="@+id/selectWarning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <CheckedTextView
        android:id="@+id/chkDeleteWarnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/config_warning_title" 
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:gravity="center_vertical" />
    
    <CheckedTextView
        android:id="@+id/chkDeleteNoteWarn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rounded_edges"
        android:layout_margin="2dp"  
        android:text="@string/config_checkbox_warn_delete_note"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:paddingLeft="30dp"
        android:gravity="center_vertical"/>
    
    <CheckedTextView
        android:id="@+id/chkDeletePageWarn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rounded_edges"
        android:layout_margin="2dp"  
        android:text="@string/config_checkbox_warn_delete_page"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:paddingLeft="30dp"
        android:gravity="center_vertical" />
    
    <CheckedTextView
        android:id="@+id/chkDeleteFolderWarn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rounded_edges"
        android:layout_margin="2dp"  
        android:text="@string/config_checkbox_warn_delete_drawer"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:paddingLeft="30dp"
        android:gravity="center_vertical" />

    <CheckedTextView
        android:id="@+id/chkDeleteCheckedWarn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rounded_edges"
        android:layout_margin="2dp"  
        android:text="@string/config_checkbox_warn_delete_checked"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:paddingLeft="30dp"
        android:gravity="center_vertical" />    
    
</LinearLayout>
</ScrollView>